@model IEnumerable<TagMvc.Application.Tags.Dtos.TagDto>

@{
    ViewData["Title"] = "Tags";
}

<h1>Tags</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Criar Nova Tag</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Descrição</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Editar</a> |
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>